<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\common_connectors_websocket.props" />

  <PropertyGroup>
    <!-- gRPC generated code isn't CLS-compliant -->
    <DefineConstants>$(DefineConstants);CLS_DISABLE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Ecng.IO.Compression" Version="$(EcngVer)" />

    <!-- gRPC + Protobuf runtime -->
    <PackageReference Include="Grpc.Net.Client" Version="$(GrpcVer)" />
    <PackageReference Include="Google.Protobuf" Version="$(GoogleProtobufVer)" />

    <!-- Build-time codegen from .proto -->
    <PackageReference Include="Grpc.Tools" Version="$(GrpcVer)" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="Native\Protos\**\*.proto" ProtoRoot="Native\Protos" GrpcServices="Client" Access="Internal" />
  </ItemGroup>
</Project>
