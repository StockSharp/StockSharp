<Window x:Class="SampleStrategies.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
    Title="{x:Static loc:LocalizedStrings.XamlStr540}" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <Button x:Name="SettingsBtn" Grid.Column="0" Content="{x:Static loc:LocalizedStrings.Settings}" Click="SettingsClick" />
        <Button x:Name="ConnectBtn" Background="LightPink" Grid.Column="1" Grid.Row="0" Content="{x:Static loc:LocalizedStrings.Connect}" Click="ConnectClick" />

        <Button x:Name="ShowSecurities" Grid.Column="0" Grid.Row="2" Content="{x:Static loc:LocalizedStrings.Securities}" Click="ShowSecuritiesClick" />
        <Button x:Name="ShowPortfolios" Grid.Column="1" Grid.Row="2" Content="{x:Static loc:LocalizedStrings.Portfolios}" Click="ShowPortfoliosClick" />
        <Button x:Name="ShowStopOrders" Grid.Column="2" Grid.Row="2" Content="{x:Static loc:LocalizedStrings.StopOrders}" Click="ShowStopOrdersClick" />

        <Button x:Name="ShowTrades" Grid.Column="0" Grid.Row="3" Content="{x:Static loc:LocalizedStrings.Ticks}" Click="ShowTradesClick" />
        <Button x:Name="ShowMyTrades" Grid.Column="1" Grid.Row="3" Content="{x:Static loc:LocalizedStrings.MyTrades}" Click="ShowMyTradesClick" />
        <Button x:Name="ShowOrders" Grid.Column="2" Grid.Row="3" Content="{x:Static loc:LocalizedStrings.Orders}" Click="ShowOrdersClick" />
    </Grid>
</Window>
